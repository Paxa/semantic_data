%section.window.index_page
  = render "welcome/form"

  %section.info
    %aside>
      %span.recent &bull;
      %h3 Last requests

      %ul
        - for parsing in @last_requests
          %li
            = link_to parsing.url, parsing.url, :target => "_blank"
            %span<
              (
              %a{:href => get_items_path(:url => parsing.url)}<>= %{#{parsing.items_count} #{parsing.items_count > 1 ? "items" : "item"}}
              )

    %aside>
      %span.knowlage &bull;
      %h3 Articles

      %ul
        - for post in Post.latest
          %li
            = link_to post.title, post
            (#{time_tag(post.published_at)})